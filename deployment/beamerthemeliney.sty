\useoutertheme[subsection=true]{smoothbars}
\useinnertheme{default}
\usefonttheme{serif}

\setbeamertemplate{headline}
{%
 \pgfuseshading{beamer@barshade}%
  \ifbeamer@sb@subsection%
    \vskip-9.75ex%
  \else%
    \vskip-7ex%
  \fi%
  \begin{beamercolorbox}[ignorebg,ht=2.25ex,dp=3.75ex]{section in head/foot}
    \insertnavigation{\paperwidth}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=\paperwidth,colsep=0.5pt]{lower separation line head}
  \end{beamercolorbox}
  \ifbeamer@sb@subsection%
    \begin{beamercolorbox}[ignorebg,ht=2.125ex,dp=1.125ex,%
      leftskip=.3cm,rightskip=.3cm plus1fil]{subsection in head/foot}
      %% \usebeamerfont{subsection in head/foot}\insertsubsectionhead
    \end{beamercolorbox}%
\fi%
}%

\setbeamertemplate{footline}
{
  \ifnum\c@framenumber=1
  \else
  \begin{beamercolorbox}[wd=\paperwidth,colsep=0.5pt]{lower separation line foot}
  \end{beamercolorbox}
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{footer}%
    \usebeamerfont{footer}\insertshortauthor\expandafter\beamer@ifempty\expandafter{\beamer@shortinstitute}{}{~~(\insertshortinstitute)}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{footer}%
    \usebeamerfont{footer}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{footer}%
    \usebeamerfont{footer}\insertshortdate{}\hspace*{2em}
    \insertframenumber{} / \inserttotalframenumber\hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
  \fi%
}

\setbeamerfont{title like}{shape=\scshape}
\setbeamerfont{frametitle}{shape=\scshape}
\setbeamerfont{section in head/foot}{shape=\scshape,size=\tiny}

\setbeamertemplate{navigation symbols}{} % hide bottom nav buttons
\setbeamercovered{transparent} % don't hide strip-teased bullet points

\definecolor{theme-purple}{HTML}{522570}
\definecolor{theme-gray}{HTML}{625e6a}
\setbeamercolor{lower separation line head}{bg=theme-purple} 
\setbeamercolor{lower separation line foot}{bg=theme-purple} 
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{use=structure,fg=white,bg=theme-purple}
%% \setbeamercolor{palette quaternary}{fg=black,bg=black!10} 
\setbeamercolor{normal text}{fg=black,bg=white} 
\setbeamercolor{alerted text}{fg=red} 
\setbeamercolor{example text}{fg=black} 
\setbeamercolor{structure}{fg=theme-purple} 
\setbeamercolor{footer}{fg=theme-gray}

\mode<all>
